#!/bin/bash

if [[ -z "$XMM_PATH" ]]; then
  echo "Source sasinit before running this program"
  exit 1
fi

xs_replotter.py $XMM_PATH/results_spec/20160701_src_bkg_spec_06.dat \
                $XMM_PATH/results_spec/20160701_src_bkg_spec_07.dat \
                $XMM_PATH/results_spec/20160701_src_bkg_spec_08.dat \
                $XMM_PATH/results_spec/20160701_src_bkg_spec_09.dat \
                $XMM_PATH/results_spec/20160701_src_bkg_spec_10.dat \
                --components "CXRB" "SP" "Instr. lines" \
                --colors "#4daf4a" "#f781bf" "#999999" \
                --labels "0087940201 MOS1" "0087940201 MOS2" "0087940201 PN" \
                         "0551000201 MOS1" "0551000201 MOS2" \
                --ylim '1e-3' '1.5' \
                --residual \
                --out "$XMM_PATH/results_plots/srcandbkg_cxrb"
